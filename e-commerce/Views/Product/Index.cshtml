@model IEnumerable<Data.Product>
@{
    Layout = "_Layout";
}

<h2>Products</h2>

<a asp-action="AddProduct" asp-controller="Product" class="btn btn-primary">Add More</a>

@if(Model?.Count()>0)
{
    <table class="table table-striped my-2">
        <tr>
            
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>
        </tr>

        @foreach (var book in Model)
        {
            <tr>
               
                <td>@book.Name</td>
                <td>@book.Price</td>
                <td>
                    <a asp-action="UpdateBook" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-success">Edit</a>
                    <a asp-action="DeleteBook" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No records</h3>
}

